<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bulkin.algorithms.MainActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:layout_weight="7"
            android:id="@+id/editText_faceSticker" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="count stickers"
            android:id="@+id/button_stickers"
            android:layout_weight="3"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:id="@+id/editText_swapCounter"
            android:layout_weight="8"
            android:hint="check amount of swaps (num 0-9)" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="count swap"
            android:id="@+id/button_swapCounter"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>



</LinearLayout>
